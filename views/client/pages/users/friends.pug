extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main  
    +alert-error(2000)
    +alert-success(2000)

    .container.my-3

        include ../../partials/list-action-users.pug

        .row
            .col-12
                +box-head(pageTitle)


        .row(list-friend=myUserId)
            each user in users
                .col-6(user-id=user.id)
                    div(class="box-user")
                        div(class="inner-avatar")
                            img(
                                src=(user.avatar ? user.avatar : "/images/avatar.png")
                                alt=user.fullName
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{user.fullName}
                            div(class="inner-buttons")
                                a(
                                    href="a"
                                    class="btn btn-sm btn-primary mr-1"
                                ) Nháº¯n tin
                        div(
                            class="inner-status"
                            status=user.statusOnline
                        ) 
                            i.fa-solid.fa-circle

block script
    script(src="/js/users.js")