mixin table-tree(productCategory, level = 1)
    each item, index in productCategory
        - const prefix = Array(level + 1).join("-- ") 
        tr
            td 
                input(
                    type="checkbox"
                    name="id"
                    value=item.id
                )
            td #{item.index}
            td
                img(
                    src=item.thumbnail, 
                    alt=item.title,
                    width="100px",
                    height="auto"
                )
            td #{prefix}#{item.title}
            td 
                input(
                    type="number"
                    value=item.position
                    style="width: 60px"
                    min="1"
                    name="position"
                )
            td  
                if(item.status == 'active')
                    a(
                        href="javascript:" class="badge bg-success"
                        data-change-status="inactive"
                        data-id=item.id
                        button-change-status
                    ) Hoạt động 
                else 
                    a(
                        href="javascript:" class="badge bg-danger"
                        data-change-status="active"
                        data-id=item.id
                        button-change-status
                    ) Dừng hoạt động 
            td
                a(
                    href=`${prefixAdmin}/products-category/detail/${item.id}`
                    class="btn btn-secondary btn-sm"
                ) Chi tiết
                a(
                    href=`${prefixAdmin}/products-category/edit/${item.id}`
                    class="btn btn-warning btn-sm ms-1"
                ) Sửa
                button(
                    class="btn btn-danger btn-sm ms-1"
                    data-id=item.id 
                    button-delete-item
                ) Xóa
        if(item.children && item.children.length > 0) 
            +table-tree(item.children, level + 1)