extends ../../layouts/default.pug
include ../../mixins/filterStatus.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/formChangeMulti.pug
include ../../mixins/alert.pug
include ../../mixins/filter.pug
include ../../mixins/moment.pug

block main
    +alert-success(3000)

    if(role.permissions.includes('products_view'))
        h1 Danh sách sản phẩm 

        .card.mb-3 
            .card-header Bộ lọc và Tìm kiếm 
            .card-body
                .row
                    .col-6
                        +filterStatus(filterButton)
                    .col-6
                        +search(keyword)

        .card.mb-3 
            .card-header Sắp xếp 
            .card-body
                .row
                    .col-4
                        +filter()

        .card.mb-3 
            .card-header Danh sách 
                .card-body 
                    .row 
                        .col-8
                            +formChangeMulti(`${prefixAdmin}/products/change-multi?_method=PATCH`)
                        
                        if(role.permissions.includes('products_create'))
                            .col-4
                                a(
                                    href=`${prefixAdmin}/products/create`
                                    class="btn btn-outline-success"
                                ) Thêm mới

                    table(
                        class="table table-hover table-sm"
                        checkbox-multi
                    )
                        thead
                            tr
                                th 
                                    input(type="checkbox" name="checkall")
                                th STT
                                th Hình ảnh
                                th Tiêu đề
                                th Giá
                                th Vị trí
                                th Trạng thái 
                                th Người tạo
                                th Hành động

                        tbody
                            each item, index in products
                        
                                tr
                                    td 
                                        input(
                                            type="checkbox"
                                            name="id"
                                            value=item.id
                                        )
                                    td #{(pagination.limitProduct *  (pagination.currentPage - 1)) + index + 1}
                                    td
                                        img(
                                            src=item.thumbnail, 
                                            alt=item.title,
                                            width="100px",
                                            height="auto"
                                        )
                                    td #{item.title}
                                    td #{item.price}$
                                    td 
                                        input(
                                            type="number"
                                            value=item.position
                                            style="width: 60px"
                                            min="1"
                                            name="position"
                                        )
                                    td  
                                        if(role.permissions.includes('products_edit'))
                                            if(item.status == 'active')
                                                a(
                                                    href="javascript:" class="badge bg-success"
                                                    data-change-status="inactive"
                                                    data-id=item.id
                                                    button-change-status
                                                ) Hoạt động 
                                            else 
                                                a(
                                                    href="javascript:" class="badge bg-danger"
                                                    data-change-status="active"
                                                    data-id=item.id
                                                    button-change-status
                                                ) Dừng hoạt động 
                                        else 
                                            if(item.status == 'active')
                                                a(
                                                    href="javascript:" class="badge bg-success"
                                                ) Hoạt động 
                                            else 
                                                a(
                                                    href="javascript:" class="badge bg-danger"
                                                ) Dừng hoạt động
                                    td 
                                        p #{item.accountFullName}
                                        +formatDateTime(item.createBy.createAt)
                                    td
                                        a(
                                            href=`${prefixAdmin}/products/detail/${item.id}`
                                            class="btn btn-secondary btn-sm"
                                        ) Chi tiết

                                        if(role.permissions.includes('products_edit'))
                                            a(
                                                href=`${prefixAdmin}/products/edit/${item.id}`
                                                class="btn btn-warning btn-sm ms-1"
                                            ) Sửa
                                        
                                        if(role.permissions.includes('products_delete'))
                                            button(
                                                class="btn btn-danger btn-sm ms-1"
                                                data-id=item.id 
                                                button-delete-item
                                            ) Xóa
        +pagination(pagination)

        form(
            action=""
            method="post"
            id="form-change-status"
            data-path=`${prefixAdmin}/products/change-status`
        )

        form(
            action=""
            method="post"
            id="form-delete-item"
            data-path=`${prefixAdmin}/products/delete`
        )

        script(src="/admin/js/product.js")  
    else 
        h1 Bạn không có quyền truy cập!